---
export interface Props {
    email: string;
}

const { email } = Astro.props as Props;
---

<div class="w-1/2 mx-auto grid place-items-center">
    <a
        href={"mailto:" + email}
        class="bg-neutral-800 hover:bg-neutral-900 hover:drop-shadow-md transition-all text-neutral-50 px-4 py-2 text-center font-semibold text-lg rounded-md"
        >Contact Me</a
    >
</div>
