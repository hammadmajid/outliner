<header class="h-full grid place-items-center">
    <div class="space-y-5">
        <img
            src="/picture.webp"
            alt="Image of a random person"
            class="w-1/2 h-1/2 rounded-md mx-auto"
        />
        <div class="text-center space-y-1 pb-8">
            <h1 class="text-4xl font-bold">John Doe</h1>
            <p class="text-lg">(he/him)</p>
            <p class="text-xl font-medium pt-5">Content Creator</p>
        </div>
        <ul class="flex flex-row justify-evenly text-xl mx-auto w-2/5">
            <li class="hover:text-cyan-400 transition-colors">
                <a href="https://facebook.com" aria-label="Facebook"
                    ><i class="fa-brands fa-facebook"></i></a
                >
            </li>
