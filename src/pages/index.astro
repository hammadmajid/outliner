---
import Base from "../layouts/Base.astro";
// required componenets
import Profile from "../components/Profile.astro";
import Links from "../components/Links.astro";
import About from "../components/About.astro";
import Details from "../components/Details.astro";
import Button from "../components/Button.astro";
---

<Base
	title="Outliner | Website Theme"
	description="Outliner is minimal, single page website theme."
	favicon="/favicon.svg"
>
	<Fragment slot="primary">
		<Profile
			name="John Doe"
			pronouns="(he/him)"
			title="Web Developer"
			img="/picture.webp"
		/>
		<Links facebook="me" instagram="me" twitter="me" linkedin="me" />
	</Fragment>
	<Fragment slot="secondary">
		<About
			text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestias rerum non incidunt nihil doloremque quam aspernatur, delectus dolorem esse unde natus cupiditate architecto!"
		/>
		<hr class="border-neutral-900" />
		<Details
			title="Education"
			year="2018 - 2020"
			subtitle="Bachelor in Computer Science"
			info="Harvad University"
		/>
		<hr class="border-neutral-900" />
		<Details
			title="Experience"
			year="2021 - Present"
			subtitle="Junior Software Engineer"
			info="Acme, Inc."
		/>
		<Button text="Contact Me" link="mailto:johndoe@example.com" />
	</Fragment>
</Base>
